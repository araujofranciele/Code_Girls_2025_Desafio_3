AWSTemplateFormatVersion: "2010-09-09"
Description: >
  Stack de estudo AWS CloudFormation - 
  Cria uma EC2 com Security Group, Apache e página inicial HTML.

Parameters:
  InstanceType:
    Description: "Tipo de instância EC2"
    Type: String
    Default: t2.micro
    AllowedValues:
      - t2.micro
      - t2.small
      - t2.medium
    ConstraintDescription: "Escolha um tipo de instância permitido."

  KeyName:
    Description: "Nome da chave SSH existente para acesso à EC2"
    Type: AWS::EC2::KeyPair::KeyName
    ConstraintDescription: "A chave SSH deve existir na região da conta."

Resources:
  MinhaSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: "Security Group para EC2 de estudo CloudFormation"
      SecurityGroupIngress:
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0
        - IpProtocol: tcp
          FromPort: 80
          ToPort: 80
          CidrIp: 0.0.0.0/0
      Tags:
        - Key: Name
          Value: SecurityGroup-CloudFormation

  MinhaInstanciaEC2:
    Type: AWS::EC2::Instance
    Properties:
      InstanceType: !Ref InstanceType
      ImageId: ami-0c02fb55956c7d316  # Amazon Linux 2 (verifique a região)
      SecurityGroups:
        - !Ref MinhaSecurityGroup
      KeyName: !Ref KeyName
      Tags:
        - Key: Name
          Value: EC2-CloudFormation-Study
      UserData:
        Fn::Base64: !Sub |
          #!/bin/bash
          yum update -y
          yum install -y httpd
          systemctl start httpd
          systemctl enable httpd
          echo "<html><h1>Olá! Stack CloudFormation funcionando!</h1></html>" > /var/www/html/index.html

Outputs:
  EC2PublicIP:
    Description: "Endereço IP público da EC2"
    Value: !GetAtt MinhaInstanciaEC2.PublicIp

  SecurityGroupID:
    Description: "ID do Security Group criado"
    Value: !Ref MinhaSecurityGroup
